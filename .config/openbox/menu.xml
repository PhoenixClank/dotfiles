	<menu id="menu" label="Openbox">
		<separator label="applications"/>
		<item label="terminal (Kitty)">
			<action name="Execute">
				<command>kitty</command>
			</action>
		</item>
		<item label="file explorer (PCManFM-Qt)">
			<action name="Execute">
				<command>pcmanfm-qt</command>
			</action>
		</item>
		<item label="text editor (Neovim-Qt)">
			<action name="Execute">
				<command>nvim-qt</command>
			</action>
		</item>
		<item label="web browser (Firefox)">
			<action name="Execute">
				<command>firefox</command>
			</action>
		</item>
		<separator label="system"/>
		<item label="reconfigure Openbox">
			<action name="Reconfigure" />
		</item>
		<item label="exit Openbox">
			<action name="Exit">
				<prompt>no</prompt>
			</action>
		</item>
	</menu>
</openbox_menu>
